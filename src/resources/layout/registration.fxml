<GridPane alignment="CENTER" onMouseDragged="#backToLogin" styleClass="mainWindow" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.registration.RegistrationController">
   <children>
      <AnchorPane>
         <children>
            <TextField fx:id="tfNick" alignment="CENTER" layoutY="50.0" promptText="Nick" styleClass="text" />
            <TextField fx:id="tfEmail" alignment="CENTER" layoutY="90.0" onKeyTyped="#emailTextAction" promptText="Email" styleClass="text" />
            <PasswordField fx:id="pfPass" alignment="CENTER" layoutY="130.0" onKeyTyped="#passAction" promptText="Password" styleClass="text" />
            <PasswordField fx:id="pfPassRepeat" alignment="CENTER" layoutY="170.0" onKeyTyped="#passRepeatAction" promptText="Repeat password" styleClass="text" />
            <Button alignment="CENTER" layoutX="61.0" layoutY="267.0" maxHeight="33.0" maxWidth="140.0" mnemonicParsing="false" onAction="#registerMeAction" prefHeight="25.0" prefWidth="139.0" styleClass="button" text="Register Me!" />
         </children></AnchorPane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
